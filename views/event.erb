<div class = "row">
    <div class = "col">
        <h1><%= @event[:event_name] %></h1>
        <h4><%= @event[:address] %></h4>
    </div>
</div>

<div class = "row mt-4">
    <div class = "col-md-6">
        <h2>Teriyiaki Hub Ratings</h2>
    </div>
    <div class = "col-md-6">
        <h2>Location Details</h2>
    </div>
</div>
<div class = "row">
    <div class = "col-md-6">
        <p><b>Overall:</b></p>
        <% if @avg_overall == nil %>
            <p>No Reviews Yet</p>
        <% else %>
            <p>
            <%= (@avg_overall).round(2) %>/5
            <% if @avg_overall >= 3.5 %>
                    <i class="fas fa-smile"></i>
            <% elsif @avg_overall >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        <% end %>

        <p><b>Food Quality:</b></p>
        <% if @avg_payout == nil %>
            <p>No Reviews Yet</p>
        <% else %>
            <p>
            <%= (@avg_payout).round(2) %>/5
            <% if @avg_payout >= 3.5 %>
                    <i class="fas fa-smile"></i>
            <% elsif @avg_payout >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        <% end %>
    
        <p><b>Variety:</b></p>
        <% if @avg_sound == nil %>
            <p>No Reviews Yet</p>
        <% else %>
            <p>
            <%= (@avg_sound).round(2) %>/5
            <% if @avg_sound >= 3.5 %>
                    <i class="fas fa-smile"></i>
            <% elsif @avg_sound >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        <% end %>

        <p><b>Ambiance:</b></p>
        <% if @avg_vibe == nil %>
            <p>No Reviews Yet</p>
        <% else %>
            <p>
            <%= (@avg_vibe).round(2) %>/5
            <% if @avg_vibe >= 3.5 %>
                    <i class="fas fa-smile"></i>
            <% elsif @avg_vibe >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        <% end %>
    </div>
    <div class = "col-md-6 col-md-offset-6">
        <p>Email: <%= @event[:email] %></p>
        <p>Phone: <%= @event[:phone] %></p>
        <p>Website: <a href="<%=@event[:website]%>"><%=@event[:website]%></a></p>
        <iframe
            width="250"
            height="150"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw
            &q=<%=@event[:address]%>&zoom=12" allowfullscreen>
        </iframe>
    </div>
</div>

<div class = "row mt-3">
    <div class = "col">
        <a href ="/events/<%= @event[:id] %>/rsvps/new" class="btn btn-outline-primary">Submit a Review</a>
    </div>
</div>

<div class = "row mt-3">
    <div class = "col">
        <h2>Reviews</h2>
    </div>
</div>

<% for rsvps in @rsvps %>
    <div class = "row mt-3">
        <div class = "col">
            <hr>
            <%= @users_table.where(id: rsvps[:user_id]).to_a[0][:name] %>
        </div>
    </div>
    <div class = "row">
        <div class = "col-md-3">
            <p>Overall Rating: 
            <%= rsvps[:overall_rating] %>
            <% if rsvps[:overall_rating] >= 3.5%>
                <i class="fas fa-smile"></i>
            <% elsif rsvps[:overall_rating] >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        </div>
        <div class = "col-md-3">
            <p>Sound Rating: 
            <%= rsvps[:sound_rating] %>
            <% if rsvps[:sound_rating] >= 3.5%>
                <i class="fas fa-smile"></i>
            <% elsif rsvps[:sound_rating] >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        </div>
        <div class = "col-md-3">
            <p>Payout Rating: 
            <%= rsvps[:payout_rating] %>
            <% if rsvps[:payout_rating] >= 3.5%>
                <i class="fas fa-smile"></i>
            <% elsif rsvps[:payout_rating] >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        </div>
        <div class = "col-md-3">
            <p>Vibe Rating: 
            <%= rsvps[:vibe_rating] %>
            <% if rsvps[:vibe_rating] >= 3.5%>
                <i class="fas fa-smile"></i>
            <% elsif rsvps[:vibe_rating] >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        </div>
    </div>
    <div class = "row">
        <div class = "col">
            <%= rsvps[:comments] %>
        </div>
    </div>
<% end %>
