<div class = "row">
    <div class = "col">
        <h1><%= @venue[:venue_name] %></h1>
        <h3><%= @venue[:address] %></h3>
    </div>
</div>

<div class = "row mt-5">
    <div class = "col-md-8">
        <h3>Ratings</h3>
    </div>
    <div class = "col-md-4">
        <h3>Booking Contact</h3>
    </div>
</div>
<div class = "row">
    <div class = "col-md-4">

        <p>Overall: </p>
        <% if @avg_overall == nil %>
            <p>No Reviews Yet</p>
        <% else %>
            <p>
            <%= (@avg_overall).round(2) %>/5
            <% if @avg_overall >= 3.5 %>
                    <i class="fas fa-smile"></i>
            <% elsif @avg_overall >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        <% end %>

        <p>Payout: </p>
        <% if @avg_payout == nil %>
            <p>No Reviews Yet</p>
        <% else %>
            <p>
            <%= (@avg_payout).round(2) %>/5
            <% if @avg_payout >= 3.5 %>
                    <i class="fas fa-smile"></i>
            <% elsif @avg_payout >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        <% end %>
    
    </div>
    <div class = "col-md-4">
        <p>Food Quality: </p>
        <% if @avg_food_quality == nil %>
            <p>No Reviews Yet</p>
        <% else %>
            <p>
            <%= (@avg_food_quality).round(2) %>/5
            <% if @avg_food_quality >= 3.5 %>
                    <i class="fas fa-smile"></i>
            <% elsif @avg_food_quality >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        <% end %>

        <p>Vibe: </p>
        <% if @avg_vibe == nil %>
            <p>No Reviews Yet</p>
        <% else %>
            <p>
            <%= (@avg_vibe).round(2) %>/5
            <% if @avg_vibe >= 3.5 %>
                    <i class="fas fa-smile"></i>
            <% elsif @avg_vibe >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        <% end %>
    </div>
    <div class = "col-md-4 col-md-offset-4">
        <p>Email: <%= @venue[:email] %></p>
        <p>Phone: <%= @venue[:phone] %></p>
        <p>Website: <a href="<%=@venue[:website]%>"><%=@venue[:website]%></a></p>
        <iframe
            width="200"
            height="150"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw
            &q=<%=@venue[:address]%>&zoom=12" allowfullscreen>
        </iframe>
    </div>
</div>

<div class = "row mt-3">
    <div class = "col">
        <a href ="/venues/<%= @venue[:id] %>/reviews/new" class="btn btn-outline-primary">Write a Review</a>
    </div>
</div>

<div class = "row mt-3">
    <div class = "col">
        <h3>Reviews</h3>
    </div>
</div>

<% for review in @reviews %>
    <div class = "row mt-3">
        <div class = "col">
            <hr>
            <%= @users_table.where(id: review[:user_id]).to_a[0][:name] %>
        </div>
    </div>
    <div class = "row">
        <div class = "col-md-3">
            <p>Overall Rating: 
            <%= review[:overall_rating] %>
            <% if review[:overall_rating] >= 3.5%>
                <i class="fas fa-smile"></i>
            <% elsif review[:overall_rating] >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        </div>
        <div class = "col-md-3">
            <p>Food Quality Rating: 
            <%= review[:food_quality_rating] %>
            <% if review[:food_quality_rating] >= 3.5%>
                <i class="fas fa-smile"></i>
            <% elsif review[:food_quality_rating] >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        </div>
        <div class = "col-md-3">
            <p>Payout Rating: 
            <%= review[:payout_rating] %>
            <% if review[:payout_rating] >= 3.5%>
                <i class="fas fa-smile"></i>
            <% elsif review[:payout_rating] >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        </div>
        <div class = "col-md-3">
            <p>Vibe Rating: 
            <%= review[:vibe_rating] %>
            <% if review[:vibe_rating] >= 3.5%>
                <i class="fas fa-smile"></i>
            <% elsif review[:vibe_rating] >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
            </p>
        </div>
    </div>
    <div class = "row">
        <div class = "col">
            <%= review[:comments] %>
        </div>
    </div>
<% end %>
